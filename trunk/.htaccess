# Расскоментируйте нижеследующий блок и замените на ваш адрес, если хотите,
# чтобы при запросе c суффиксом www, 
# клиент автоматически переходил на адрес без www
# RewriteEngine On
# Options +FollowSymlinks
# RewriteBase /
# RewriteCond %{HTTP_HOST} ^www.ваш_URL$
# RewriteRule ^(.*)$ http://ваш_URL/$1 [R=301,L]

Options -Indexes

<Files ~ "config.php$">
Order allow,deny
Deny from All
</Files>


# Глобальные переменные
# Обязательно Off!
php_flag register_globals Off

# Индексная страница
DirectoryIndex index.php index.html

# MIME по умолчанию
php_value default_mimetype text/html

# Магические кавычки
php_flag magic_quotes_gpc Off
php_flag magic_quotes_runtime Off
php_flag magic_quotes_sybase Off

# переменные argc и argv
php_flag register_argc_argv Off

# для подсветки кода
php_value short_open_tag 1

# отладка
php_flag display_errors Off
php_value error_reporting -1
php_flag log_errors On
php_value error_log /error_log


# Сессии
php_value session.use_trans_sid 0
php_value session.use_cookies 1
php_value session.use_only_cookies 1


# кодировка
AddDefaultCharset UTF-8
php_value default_charset UTF-8


# Максимальный размер файла для загрузки
php_value upload_max_filesize 50M
php_value post_max_size 50M


# mbstring
#php_value mbstring.func_overload 6

# php_value mbstring.internal_encoding UTF-8
php_value mbstring.http_output pass
php_value mbstring.http_input pass
php_value mbstring.encoding_translation 0

# Компрессия
php_flag zlib.output_compression On
php_value zlib.output_compression_level 6


ErrorDocument 404 /
ErrorDocument 500 /